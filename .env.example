# ===========================================
# Nachos Replay for Guaca - Configuration
# ===========================================

# Application
APP_NAME=Nachos Replay for Guaca
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://nachos:nachos_secret@db:5432/nachos_replay
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# LDAP/Active Directory (opcional)
LDAP_ENABLED=false
LDAP_SERVER=ldap://your-dc.domain.com:389
LDAP_BASE_DN=DC=domain,DC=com
LDAP_BIND_DN=CN=svc_nachos,OU=Service Accounts,DC=domain,DC=com
LDAP_BIND_PASSWORD=your-bind-password
LDAP_USER_SEARCH_BASE=OU=Users,DC=domain,DC=com
LDAP_GROUP_SEARCH_BASE=OU=Groups,DC=domain,DC=com
LDAP_USER_ATTR_USERNAME=sAMAccountName
LDAP_USER_ATTR_EMAIL=mail
LDAP_USER_ATTR_DISPLAY_NAME=displayName

# Guacamole Integration
GUACAMOLE_RECORDINGS_PATH=/guacamole/recordings
REPLAY_STORAGE_PATH=/app/replays
REPLAY_IMPORT_DELAY_HOURS=24

# Storage Rotation
RETENTION_DAYS=365
MAX_STORAGE_GB=500
ARCHIVE_ENABLED=true
ARCHIVE_COMPRESSION=gzip

# Security
CORS_ORIGINS=http://localhost,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Frontend
VITE_API_URL=http://localhost:8000/api
VITE_APP_NAME=Nachos Replay for Guaca
